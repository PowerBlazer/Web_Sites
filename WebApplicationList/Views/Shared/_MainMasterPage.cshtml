<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset='utf-8'>
        <meta name='viewport' content='width=device-width, initial-scale=1'>
        <title>@ViewData["Title"]</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@500&display=swap" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="~/CommonStyle.css">
        <link rel="stylesheet" type="text/css" href="~/MainWeb/css/site.css">
        <link rel="stylesheet" type="text/css" href="~/MainWeb/css/ModalAuthorized.css">   
        @await RenderSectionAsync("link",required:false)  
    </head>
    <body>
        <header>
            <div class="container">
                <div class="header_inner">
                    <a href="~/Main" class="logo-tip">
                        Web_Sites
                    </a>
                    <div class="menu-header">
                        <ul class="menu-header-items">
                            <li class="menu-header-item active-item-menu">
                                <a href="~/Main">Главное</a>  
                            </li>
                            <li class="menu-header-item">
                                <a href="#">О нас</a>  
                            </li>
                            <li class="menu-header-item">
                                <a href="#">Страницы Сайтов</a>
                            </li>
                        </ul>
                        
                        @if(!User.Identity!.IsAuthenticated)
                        {
                            <button type="button" class="login-user">
                                <div class="border-user">
                                    <img src="~/MainWeb/Images/user-icon.svg" width="25" height="25">
                                </div>        
                                <span>Войти</span>
                            </button>        
                        }
                        else
                        {         
                            string Name = User.Identity.Name!;
                            
                            <div class="profile_inner">
                                <button type="button" class="profile-button">
                                    <img src="" id="profile-image" alt="img" width="45" height="45">
                                    <span>@Name</span>
                                </button>
                                <div class="profile-listdown_inner" style="visibility: hidden; opacity:0;">
                                    <img src="" id="profile-image-list" asp-append-version="true" alt="img" width="60" height="60">
                                    <span>@Name</span>
                                    <div>
                                        <a href="~/Profile" class="profile-list-item">Профиль</a>
                                        <a href="~/Profile" class="profile-list-item">Настройки</a>
                                        <button type="button" class="profile-logout-button" id="logout-but">Logout</button>
                                    </div>
                                </div>
                            </div>
                        }       
                    </div>            
                    <button type="button" id="openmenu" class="close-menu">
                        <img class="img-close" src="~/MainWeb/Images/hamburgermenu.svg" alt="img" width="40" height="40">
                    </button>          
                </div>
            </div>
        </header>
        <div class="content-gener">      
            @RenderBody()
        </div>

        @*-----ModalWindow----*@
        <div class="pop-up-authorized" style="visibility:hidden;opacity:0;">
            <div class="pop-up-login__inner">
                <button type="button" class="close-button-modal-login"><i class="ic-close-ic"></i></button>
                <div class="login-label">Account Login</div>
                <div class="form-post">
                    <div class="form-post-item">
                        <label>Username</label>
                        <input type="text" class="input-text" id="login"/>
                    </div>
                    <div class="form-post-item">
                        <label>Password</label>
                        <input type="password" class="input-text" id="password"/>
                    </div>
                    <div class="form-post-item remember"> 
                        <div>
                            <input type="checkbox"id="remember" class="input-checkbox"/>
                            <label>Remember me</label>
                        </div> 
                        <button type="button" class="transition-registr" id="login-modal">Not registered yet?</button>
                    </div>
                    <div class="errors-message_inner" id="login-error">

                    </div>                 
                </div>
                <button type="button" class="post-data-login">Login</button>
            </div>
            <div class="pop-up-register__inner" style="visibility: hidden; transform: translate(200%, -50%);">
                <button type="button" class="close-button-modal-register"><i class="ic-close-ic"></i></button>
                <div class="login-label">Account Register</div>
                <div class="form-post" id="form-register">
                    <div class="form-post-item">
                        <label>Username</label>
                        <input type="text" name="login" class="input-text" id="login-reg"/>
                    </div>
                    <div class="form-post-item">
                        <label>Email</label>
                        <input type="text" name="email" class="input-text" id="email"/>
                    </div>
                    <div class="form-post-item">
                        <label>Password</label>
                        <input type="password" name="password" class="input-text" id="password-reg"/>
                    </div>
                    <div class="form-post-item remember-reg">
                        <div>
                            <input type="checkbox" id="remember-reg" name="rememberme" class="input-checkbox"/>
                            <label>Remember me</label>
                        </div>
                        <button type="button" class="transition-registr" id="register-modal">Already have an account?</button>
                    </div> 
                    <div class="errors-message_inner" id="register-errors">

                    </div>             
                </div>
                <button type="button" class="post-data-register">Sign Up</button>
            </div>
        </div>
        <div class="pop-up-load-anim_inner">
            <div class="pop-up-load-anim">
                <img src="~/MainWeb/Images/spinner.gif" id="load-animation-authorize">
            </div>
        </div>
        
        <div class="notification-window">
            <img src="~/MainWeb/Images/success.svg" id="notification-image" alt="img" width="30" height="30">
            <div class="message-notification"></div>
        </div>
        @*--------------------*@

        <footer>
            
        </footer>


        @*-----Scripts-----*@

        <script src="~/lib/jquery/dist/jquery.min.js" type="application/javascript" asp-append-version="true"></script>
        <script src="~/MainWeb/js/site.js" type="application/javascript" asp-append-version="true"></script>       
        <script src="~/MainWeb/js/AuthorizeScript.js" type="application/javascript" asp-append-version="true"></script>
        <script>
            @if(User.Identity.IsAuthenticated){
                @:CheckAuthorize("@User.Identity.Name");
                @:GetAvatar("@User.Identity.Name");
            }
        </script>
        @await RenderSectionAsync("Scripts", required: false)
        
        @*------------------*@
    </body>
</html>
