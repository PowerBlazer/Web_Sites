@using WebApplicationList.Models.MainSiteModels.ViewModels
@model IEnumerable<ProjectViewModel>
@if(Model.Count()>0)
{
    @foreach (var item in Model)
    {
    <div class="project-block">
        <button value="@item.projectName" class="project-image open-project-info">
            <div>
                <a href="~/UserProject@(item.projectId)">@item.projectName</a>
            </div>
            <img src="~/@(item.projectUrlImage)" alt="img" width="200">
        </button>
        <div class="project-info">
            <div class="project-name-user">
                <img src="~/@(item.linkAvatar)" alt="img" width="25" height="25">
                <a href="~/Profile?userName=@item.userName">@item.userName</a>
            </div>
            <ul>
                <li>
                    <img src="~/MainWeb/Images/scan.svg" width="25" height="25" alt="eye">
                    <span>@item.views</span>
                </li>
                <li>
                    <i class="icon-heart"></i>
                    <span>@item.likes</span>
                </li>
            </ul>
        </div>
    </div>
    }
}
else{
    <div class="null-elements-text">@ViewBag.NullProjects</div>
}

